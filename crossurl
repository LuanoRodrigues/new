openapi: 3.0.0
info:
  title: Crossref API Integration
  description: Access bibliographic records from Crossref.
  version: 1.0.0
servers:
  - url: https://api.crossref.org
    description: Main production server for Crossref API
paths:
  /works:
    get:
      summary: Retrieve works based on bibliographic information from Crossref.
      operationId: getCrossrefWorks
      parameters:
        - in: query
          name: query.bibliographic
          required: true
          schema:
            type: string
          description: Bibliographic information to search for, such as title, author, or keywords.
        - in: query
          name: rows
          schema:
            type: integer
            default: 30
          description: Number of results to return per page.
        - in: query
          name: offset
          schema:
            type: integer
            default: 0
          description: Offset of the first result to return.
      responses:
        '200':
          description: Successful response with the list of works from Crossref.
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    type: string
                  message-type:
                    type: string
                  message-version:
                    type: string
                  message:
                    type: object
                    properties:
                      items:
                        type: array
                        items:
                          type: object
                      total-results:
                        type: integer
                      items-per-page:
                        type: integer
                      query:
                        type: object
                        properties:
                          search-terms:
                            type: string
                          start-index:
                            type: integer
