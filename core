openapi: 3.0.3
info:
  title: CORE API
  description: This document specifies the REST API for the CORE platform.
  version: 1.0.0
servers:
  - url: 'https://api.core.ac.uk/v3/'
paths:
  /search/{entityType}:
    get:
      tags:
        - Search
      summary: Search through all CORE entities and retrieve abstracts.
      description: Search into all CORE entities based on the query and entity type.
      operationId: searchWithAbstracts
      parameters:
        - name: entityType
          in: path
          required: true
          schema:
            type: string
            enum: [works, outputs, data-providers, journals]
          description: Type of the entity to search within.
        - name: q
          in: query
          required: true
          schema:
            type: string
          description: Free text search query including abstracts.
        - name: limit
          in: query
          schema:
            type: integer
            default: 10
          description: The maximum number of search results to return.
        - name: offset
          in: query
          schema:
            type: integer
            default: 0
          description: The offset from the beginning of the result set.
      responses:
        '200':
          description: Search results containing entities along with their abstracts if available.
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/SearchResults'
security:
  - ApiKeyAuth: []
components:
  securitySchemes:
    ApiKeyAuth:
      type: apiKey
      in: header
      name: Authorization
      description: API key needed to authorize requests.
  schemas:
    SearchResults:
      type: object
      properties:
        total_hits:
          type: integer
        results:
          type: array
          items:
            $ref: '#/components/schemas/SearchResult'
    SearchResult:
      type: object
      properties:
        id:
          type: string
        title:
          type: string
        abstract:
          type: string
        authors:
          type: array
          items:
            type: string
        date:
          type: string
          format: date
        downloadUrl:
          type: string
          format: uri
