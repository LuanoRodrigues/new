openapi: 3.0.3
info:
  title: CORE API
  description: This document specifies the REST API for the CORE platform.
  version: 1.0.0
servers:
  - url: 'https://api.core.ac.uk/v3' # Removed trailing slash to avoid double slash in the request URL
paths:
  /search/works:
    get:
      tags:
        - Search
      summary: Search through works entities and retrieve details including abstracts.
      description: Search into works entities based on the query. Designed to retrieve detailed information including abstracts.
      operationId: searchWorks
      parameters:
        - name: q
          in: query
          required: true
          schema:
            type: string
          description: Free text search query.
        - name: limit
          in: query
          schema:
            type: integer
            default: 10
          description: The maximum number of search results to return.
        - name: offset
          in: query
          schema:
            type: integer
            default: 0
          description: The offset from the beginning of the result set.
      responses:
        '200':
          description: Search results containing works entities along with their abstracts if available.
          content:
            application/json:
              schema:
                type: object
                properties:
                  total_hits:
                    type: integer
                  results:
                    type: array
                    items:
                      type: object
                      properties:
                        id:
                          type: string
                        title:
                          type: string
                        abstract:
                          type: string
                          nullable: true
                          description: The abstract of the work, providing a summary
components:
  securitySchemes:
    ApiKeyAuth:
      type: apiKey
      in: header
      name: Authorization
      description: API key needed to authorize requests.
  schemas:
    SearchResults:
      type: object
      properties:
        total_hits:
          type: integer
        results:
          type: array
          items:
            $ref: '#/components/schemas/SearchResult'
    SearchResult:
      type: object
      properties:
        id:
          type: string
        title:
          type: string
        abstract:
          type: string
        authors:
          type: array
          items:
            type: string
        date:
          type: string
          format: date
        downloadUrl:
          type: string
          format: uri
