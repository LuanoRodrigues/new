openapi: 3.0.3
info:
  title: CORE API
  description: This document specifies the REST API for the CORE platform.
  version: 3.0.0
servers:
  - url: 'https://api.core.ac.uk/v3/'
paths:
  /search/{entityType}:
    get:
      tags:
        - Search
      summary: Search through all CORE entities together
      description: Search into all CORE entities. See our query language section to understand how to query the CORE data.
      parameters:
        - name: entityType
          in: path
          required: true
          schema:
            type: string
            enum: [works, outputs, data-providers, journals]
          description: Type of the entity to search.
        - name: q
          in: query
          required: true
          schema:
            type: string
          description: Free text search query.
        - name: scroll
          in: query
          schema:
            type: boolean
          description: Enable scroll pagination for result sets bigger than 10,000 items.
        - name: offset
          in: query
          schema:
            type: integer
            default: 0
          description: The offset from the result set to start the results.
        - name: limit
          in: query
          schema:
            type: integer
            default: 10
          description: The maximum size of the search results.
        - name: stats
          in: query
          schema:
            type: boolean
            default: false
          description: If true, includes statistics related to the entity in the search results.
      responses:
        '200':
          description: Contains the entities matching the search query.
          content:
            application/json:
              schema:
                type: object
                properties:
                  total_hits:
                    type: integer
                  limit:
                    type: integer
                  offset:
                    type: integer
                  scroll_id:
                    type: string
                  results:
                    type: array
                    items: {}
                  tooks:
                    type: array
                    items:
                      type: string
                  es_took:
                    type: integer
security:
  - ApiKeyAuth: []
components:
  securitySchemes:
    ApiKeyAuth:
      type: apiKey
      in: header
      name: Authorization
      description: API key for access to CORE API.
